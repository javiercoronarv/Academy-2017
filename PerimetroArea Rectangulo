def PerimetroArea():
	print('El siguiente programa permite calcular el área y el perímetro de un triángulo rectángulo.')
	base = float(input('Por favor ingrese la longitud de la base: '))
	altura = float(input('Por favor ingrese la longitud de la altura: '))

	area = base * altura
	perimetro = 2 * base + 2 * altura

	print('El perímetro del rectángulo es de: {}'.format(perimetro))
	print('El área del rectángulo es de: {}'.format(area))

PerimetroArea()
